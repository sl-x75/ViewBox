{
  "name": "viewbox",
  "version": "0.9.0",
  "description": "Electron + Tailwind + IFC viewer setup",
  "author": "sl-x75",
  "type": "module",
  "main": "dist-electron/main.js",
  
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "vite build && npx electron-builder",
    "build:mac": "vite build && npx electron-builder --mac",
    "build:win": "vite build && npx electron-builder --win",
    "build:linux": "vite build && npx electron-builder --linux",
    "start": "electron ."
  },
  
  "build": {
    "appId": "com.ViewBox",
    "productName": "ViewBox",
    
    "directories": {
      "output": "release"
    },
    
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    
    "extraResources": [
      {
        "from": "src/public/",
        "to": "public",
        "filter": ["**/*"]
      }
    ],
    
    "asar": true,
    "asarUnpack": [
      "**/node_modules/web-ifc/**/*"
    ],
    
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "category": "public.app-category.graphics-design",
      "icon": "build/icons/mac/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}"
    },
    
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icons/png/512x512.png",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    },
    
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons/win/icon.ico",
      "artifactName": "${productName}-${version}-win-${arch}.${ext}"
    },
    
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  
  "devDependencies": {
    "@babel/runtime": "^7.28.4",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.2",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "preline": "^3.1.0",
    "tailwindcss": "^4.1.11",
    "vite": "^7.0.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.3"
  },
  
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.1",
    "@editorjs/code": "^2.9.3",
    "@editorjs/delimiter": "^1.4.2",
    "@editorjs/editorjs": "^2.30.8",
    "@editorjs/header": "^2.8.8",
    "@editorjs/inline-code": "^1.5.2",
    "@editorjs/list": "^2.0.8",
    "@editorjs/marker": "^1.4.0",
    "@editorjs/paragraph": "^2.11.7",
    "@editorjs/quote": "^2.7.6",
    "@editorjs/simple-image": "^1.6.0",
    "@editorjs/table": "^2.4.5",
    "@editorjs/warning": "^1.4.1",
    "@melloware/coloris": "^0.25.0",
    "@scena/guides": "^0.29.2",
    "@uiw/codemirror-extensions-color": "^4.25.2",
    "@uiw/codemirror-theme-basic": "^4.25.2",
    "@uiw/codemirror-theme-nord": "^4.25.2",
    "@uiw/codemirror-themes-all": "^4.25.2",
    "chokidar": "^4.0.3",
    "codemirror": "^6.0.2",
    "infinite-viewer": "^0.29.1",
    "interactjs": "^1.10.27",
    "lodash": "^4.17.21",
    "mime": "^4.1.0",
    "nouislider": "^15.8.1",
    "web-ifc": "^0.0.68"
  }
}